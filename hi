<script>
    const messages = [
        "Hi Jo, Happy Valentine's Day!",
        "I hope you're happy ðŸ’•",
        "I just want to say you're special for me ðŸ’–",
        "You always make my day brighter â˜€ï¸",
        "Thanks for being amazing ðŸ˜˜",
        "This is just a little surprise for you â¤ï¸"
    ];

    let current = 0;

    const messageEl = document.getElementById("message");
    const btn = document.getElementById("nextBtn");
    const photo = document.getElementById("photo");
    const music = document.getElementById("music");

    btn.addEventListener("click", () => {
        current++;
        if(current < messages.length){
            messageEl.textContent = messages[current];
        } else if(current === messages.length){
            messageEl.style.display = "none";
            btn.style.display = "none";
            photo.style.display = "block";
            music.style.display = "block";
            music.play();
        }
    });
</script>
